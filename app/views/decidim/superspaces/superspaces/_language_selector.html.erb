<% append_javascript_pack_tag "decidim_superspaces_language_selector" %>

<div id="dc-dialog-locale-wrapper"
     class="cookies__container"
     data-nosnippet role="region"
     data-superspace-id="<%= superspace.id %>"
     data-superspace-locale="<%= superspace.locale %>"
     data-current-locale="<%= I18n.locale %>">
  <div class="cookies">
    <div class="cookies__left">
      <div>
        <div class="h5">
          <%= t(".cookie_question") %>
        </div>
        <p>
          <%= t(".cookie_subtitle") %>
        </p>
      </div>
    </div>
    <div class="cookies__right">
      <button id="dc-dialog-cookie-accept" class="button button__sm button__secondary">
        <%= t(".change") %>
      </button>
      <button id="dc-dialog-cookie-reject" class="button button__sm button__transparent-secondary">
        <%= t(".keep") %>
      </button>
    </div>
  </div>
</div>
